@model IEnumerable<WebBanVeMayBay.Models.Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách chuyến bay</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thread>
                <tr>
                    <th class="text-center">Đặt mua vé</th>
                    <th>Tên chuyến bay</th>
                    @*<th>Loại chuyến bay</th>*@
                    <th>Ngày khởi hành</th>
                    <th>Điểm đi</th>
                    <th>Điểm đến</th>
                    <th>Thời gian bay (Phút)</th>
                    <th>Số ghế trống</th>
                    <th>Số ghế đặt</th>
                    <th>Giá vé</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in ViewBag.c)
                {
                        <tr>
                            <th class="text-center">
                                <a class="btn btn-sm btn-success"
                                   href="@Url.Action("DatVe", "TrangChu",
                                    new {id = item.Id, name = item.Name, date = item.Date, time = item.Time, Price = item.Price})"> Đặt Vé</a>
                            <th>@item.Name</th>
                            @*<th>@item.CatName</th>*@
                            <th>@item.Date</th>
                            <th>@item.PlanFrom</th>
                            <th>@item.PlanTo</th>
                            <th>@item.OnAir</th>
                            <th>@item.Seat1</th> @*cần xử lý tính số ghế trống và số ghế đặt*@
                            <th>@item.Seat2</th>
                            <th>@item.Price</th>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>