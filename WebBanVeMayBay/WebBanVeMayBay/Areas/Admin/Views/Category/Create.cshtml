@model WebBanVeMayBay.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card ">
        <div class="card-header">
            <div class="row ">
                <div class="col-md-6">
                    <strong class="text-uppercase">Thêm loại chuyến bay</strong>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Category")" class="btn btn-sm- btn-success">Trở lại danh sách</a>
                    <button type="submit" class="btn btn-sm btn-success">Lưu</button>
                </div>
            </div>
        </div>

        <div class="card-body p-3">
            <div class="row">
                <div class="col">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label> Tên loại chuyến bay</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="form-group">
                            <label>Loại chuyến bay</label>
                            @Html.DropDownListFor(model => model.ParentID, (SelectList)ViewBag.ListCat, "--Loại chuyến bay--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label> Trạng thái</label>
                            @Html.DropDownListFor(model => model.Status, new[] {
                           new SelectListItem { Text="Private", Value="2"},
                           new SelectListItem {Text="Public", Value="1"}}, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


