    </style>
</head>
<body>
    <section class="clearfix header background-bar">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-dark background-bar">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">HQK ADMIN</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">    
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Dashboard")">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Chuyến bay
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Product")">Danh sách chuyến bay</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Category")">Phân loại chuyến bay</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "Product")">Thêm chuyến bay</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Create", "Category")">Thêm loại chuyến bay</a></li>
                                </ul>
                            </li>
                            @*<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Lập báo cáo
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "WeekReport")">Lập báo cáo tuần</a></li>
                                    <li><a class="dropdown-item" href="#">Lập báo cáo tháng</a></li>
                                    <li><a class="dropdown-item" href="#">Lập báo cáo quý</a></li>
                                    <li><a class="dropdown-item" href="#">Lập báo cáo năm</a></li>
                                </ul>
                            </li>*@
                            <li>
                                <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Ticket")">Vé chuyến bay</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="@Url.Action("Index", "Complain")">Giải quyết khiếu nại</a>
                            </li>
                        </ul>
                        <form class=" text-white">
                            @Session["Fullname"]
                            <a href="@Url.Action("Logout","Auth")" class="btn btn-sm- btn-success"> Đăng xuất </a>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </section>
    <section class="clearfix maincontent background-bg">
        <div class="container-fluid py-3 ">
            @RenderBody()
        </div>
    </section>
    <section class="clearfix footer background-bar">
        <div class="container-fluid text-white text-center py-3">
            Design by HQK
        </div>
    </section>
    @RenderSection("Footer", required: false)
</body>
</html>
