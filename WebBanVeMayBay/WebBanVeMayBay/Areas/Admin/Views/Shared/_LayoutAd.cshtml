<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Public/css/LayoutAd.css" rel="stylesheet" />
    <link href="~/Public/css/css/all.min.css" rel="stylesheet" />
    @*<link href="~/Library/font-awesome.css" rel="stylesheet" />
        <link href="~/Library/style.css" rel="stylesheet" />*@
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("head", required: false)
    <style>
        .background-bar {
            background-color: #08403A; /*xanh*/
        }

        .background-bg {
            background-color: #D1D1D1; /*Xám*/
