@model WebBanVeMayBay.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase">Thêm chuyến bay</strong>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-sm- btn-success">Trở lại danh sách</a>
                    <button type="submit" class="btn btn-sm btn-success">Lưu</button>
                </div>
            </div>
        </div>

        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label> Tên chuyến bay</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Ghi chú</label>
                        @Html.TextAreaFor(model => model.Detail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Sân bay đi</label>
                        @Html.TextAreaFor(model => model.PlanFrom, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PlanFrom, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Sân bay đến</label>
                        @Html.TextAreaFor(model => model.PlanTo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PlanTo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Ngày - Giờ bay</label>
                        <input id="datetime" type="datetime-local" name="datetime" />
                        @Html.ValidationMessageFor(model => model.DateTime, "", new { @class = "text-danger" })
                    </div>
                    @*<div class="form-group">
                            <label>Ngày bay </label>
                            <input id="date" type="date" name="date" />
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>*@
                    <div class="form-group">
                        <label>Sân Bay Trung Gian</label>
                        @Html.TextAreaFor(model => model.MidAir, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MidAir, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Thời gian dừng (Phút)</label>
                        @Html.TextAreaFor(model => model.BreakTime, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreakTime, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Thời gian bay (phút)</label>
                        @Html.TextAreaFor(model => model.OnAir, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.OnAir, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Loại chuyến bay</label>
                        @Html.DropDownListFor(model => model.CatId, (SelectList)ViewBag.ListCat, "--Loại chuyến bay--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CatId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Số lượng vé</label>
                        @Html.TextAreaFor(model => model.Number, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá</label>
                        @Html.TextAreaFor(model => model.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá khuyến mãi</label>
                        @Html.TextAreaFor(model => model.Pricesale, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Pricesale, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label> Trạng thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] {
                       new SelectListItem { Text="Private", Value="2"},
                       new SelectListItem {Text="Public", Value="1"}}, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Số lượng ghế hạng 1</label>
                        @Html.TextAreaFor(model => model.Seat1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Seat1, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Số lượng ghế hạng 2</label>
                        @Html.TextAreaFor(model => model.Seat2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Seat2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}


