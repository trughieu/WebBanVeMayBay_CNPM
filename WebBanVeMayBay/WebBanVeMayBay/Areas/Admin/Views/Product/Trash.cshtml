@model IEnumerable<WebBanVeMayBay.Models.Product>

@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index", "Product")" class="btn btn-sm- btn-success">Trở lại danh sách</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thread>
                <tr>
                    @*<th style="width:20px;" class="text-center">#</th>*@
                    <th>Mã chuyến bay</th>
                    <th>Tên chuyến bay</th>
                    @*<th>Loại chuyến bay</th>*@
                    <th>Ngày bay</th>
                    <th>Thời gian bay</th>
                    <th>Điểm đi</th>
                    <th>Điểm đến</th>
                    <th>Thời gian bay (Phút)</th>
                    <th>Số ghế trống</th>
                    <th>Số ghế đặt</th>
                    <th class="text-center">Chức năng</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <th>@item.Name</th>
                        @*<th>@item.CatName</th>*@
                        <th>@item.Date</th>
                        <th>@item.Time </th>
                        <th>@item.PlanFrom</th>
                        <th>@item.PlanTo</th>
                        <th>@item.OnAir</th>
                        <th>@item.Seat1</th>
                        <th>@item.Seat2</th>
                        <th class="text-center">
                            <a href="@Url.Action("Restore", "Product", new { @id = item.Id })" class="btn btn-sm btn-info ">
                                Khôi phục
                            </a>
                            <a href="@Url.Action("Delete", "Product", new { @id = item.Id })" class="btn btn-sm btn-danger ">
                                Xóa
                            </a>
                        </th>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


